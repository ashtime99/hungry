<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ash.server.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ash.server.pojo.Category">
        <id column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
    </resultMap>


    <select id="getCategory" resultType="com.ash.server.pojo.Category">
        SELECT
            ca.category_id,
            ca.category_name,
        FROM
            h_category AS ca
                LEFT JOIN h_commodity_category AS cc ON ca.role_id = cc.role_id
        WHERE
            cc.commodity_id = #{commodityId}
    </select>

</mapper>
